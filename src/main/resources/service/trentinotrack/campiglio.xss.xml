<?xml version="1.0" encoding="UTF-8"?>
<xss:definition main="campiglio" name="campiglio"
	namespace="http://tempuri.org" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:xss="http://www.sayservice.it/xss" xmlns="http://www.sayservice.it/html">

	<xss:template name="campiglio">
		<html xss:anyAttrs="true">
			<xss:path path="//div[@class='contenuti_associati']">
			    <div class="contenuti_associati">
			    	<xss:repeat>
			    	    <a xss:label="pages" href="(.)*">
			    	        <xss:finally>
								<xss:copy label="link" query="@href" />
							</xss:finally>						    				        
							<div xss:anyAttrs="true">
							    <div xss:anyAttrs="true">
							        <div xss:anyAttrs="true" xss:anyContent="true"/>
							        <div xss:anyAttrs="true">
							            <h3><xss:anyText label="title"/></h3>
							        </div>    
							    </div>    
							</div>    
						</a>	
			    	</xss:repeat>
			    </div>
			</xss:path>
		</html>
	</xss:template>

</xss:definition>
